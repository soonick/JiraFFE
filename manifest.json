{
  "manifest_version": 2,

  "name": "JiraFFE",
  "description": "This extension makes Jira a little less anoying",
  "version": "1.0",

  "background": {
    "scripts": ["js/jiraffe.js", "js/tabsListener.js"]
  },

  "permissions": [
    "storage",
    "webRequest",
    "tabs",
    "<all_urls>"
  ],

  "browser_action": {
    "default_icon": {
      "19": "img/jiraffe-off.png"
    }
  }
}
